{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react"
  },
  "files": [
    "src/index.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": [
    "build",
    "coverage",
    "lib",
    "lib-esm",
    "node",
    "node_modules",
    "target"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true
  }
}
