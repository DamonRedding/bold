{
  "name": "bridge-react",
  "version": "1.0.0-alpha.74",
  "main": "lib/main.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "icons",
    "tslint.json"
  ],
  "repository": {
    "url": "https://github.com/laboratoriobridge/bridge-react"
  },
  "publishConfig": {
    "registry": "https://repositorio.bridge.ufsc.br/repository/npm-private/"
  },
  "scripts": {
    "start": "npm run clean && webpack --mode=production --progress --watch",
    "clean": "shx rm -rf lib",
    "build": "npm run clean && webpack --mode=production",
    "test": "npm run lint && TZ=UTC jest",
    "test:watch": "TZ=UTC jest --watch --collectCoverage=false",
    "lint": "tslint -p tsconfig.json",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "icons": "npm run icons:clean && npm run icons:svgr && npm run icons:index",
    "icons:clean": "rm -rf ./src/components/elements/Icon/generated",
    "icons:svgr": "svgr --ext tsx --icon --template ./tools/IconTemplate.js --svgo-config svgo.config.json -d ./src/components/elements/Icon/generated ./icons",
    "icons:index": "babel-node ./tools/generateIconsIndex.js",
    "sonar": "sonar-scanner"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "peerDependencies": {
    "axios": "^0.18.0",
    "emotion": "^9.2.12",
    "final-form": "^4.11.0",
    "moment": "^2.22.2",
    "react": "^16.6.3",
    "react-final-form": "^4.0.2",
    "react-redux": "^5.1.1",
    "react-router-dom": "^4.3.1",
    "tslint-react": "^3.6.0"
  },
  "dependencies": {
    "emotion-theming": "9.2.9",
    "final-form-focus": "1.1.0",
    "final-form-set-field-data": "1.0.1",
    "normalize.css": "8.0.1",
    "react-dropzone": "7.0.1",
    "react-popper": "1.3.0",
    "react-select": "2.1.1",
    "react-text-mask": "5.4.3",
    "text-mask-addons": "3.8.0",
    "text-mask-core": "5.1.2"
  },
  "devDependencies": {
    "@babel/core": "7.1.6",
    "@storybook/addon-actions": "4.0.7",
    "@storybook/addon-info": "4.0.7",
    "@storybook/addon-knobs": "4.0.7",
    "@storybook/addon-links": "4.0.7",
    "@storybook/addon-options": "4.0.7",
    "@storybook/addons": "4.0.7",
    "@storybook/react": "4.0.7",
    "@svgr/cli": "4.0.3",
    "@types/classnames": "2.2.6",
    "@types/enzyme": "3.1.15",
    "@types/jest": "23.3.9",
    "@types/lodash": "4.14.118",
    "@types/prop-types": "15.5.6",
    "@types/react": "16.7.6",
    "@types/react-addons-create-fragment": "0.14.19",
    "@types/react-dropzone": "4.2.2",
    "@types/react-redux": "6.0.9",
    "@types/react-router": "4.4.1",
    "@types/react-router-dom": "4.3.1",
    "@types/react-select": "2.0.7",
    "@types/react-text-mask": "5.4.2",
    "@types/redux-mock-store": "1.0.0",
    "@types/storybook__addon-actions": "3.4.1",
    "@types/storybook__addon-info": "3.4.2",
    "@types/storybook__addon-knobs": "3.4.1",
    "@types/storybook__addon-links": "3.3.2",
    "@types/storybook__addon-options": "3.2.2",
    "@types/storybook__react": "4.0.0",
    "awesome-typescript-loader": "5.2.1",
    "axios": "0.18.0",
