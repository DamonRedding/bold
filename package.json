    "final-form": "4.11.0",
    "husky": "1.1.4",
    "intl": "1.2.5",
    "jest": "23.6.0",
    "jest-cli": "23.6.0",
    "jest-emotion": "9.2.11",
    "lodash": "4.17.11",
    "marksy": "6.1.0",
    "moment": "2.22.2",
    "prop-types": "15.6.2",
    "react": "16.6.3",
    "react-addons-create-fragment": "15.6.2",
