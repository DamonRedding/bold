{
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "rules": {
        "jsx-boolean-value": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "semicolon": [
            true,
            "never"
        ]
    },
    "jsRules": {
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "semicolon": [
            true,
            "never"
        ]
    }
}
